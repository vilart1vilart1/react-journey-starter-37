<job-scheduling-data xmlns="http://quartznet.sourceforge.net/JobSchedulingData"
										xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
										version="2.0">

	<processing-directives>
		<overwrite-existing-data>true</overwrite-existing-data>
	</processing-directives>

	<schedule>
		<job>
			<name>ProvideSumUpTurnoverAgent</name>
			<group>Customer.Ramseier</group>
			<description>Sum up turnover per customer</description>
			<job-type>Customer.Ramseier.BackgroundServices.ProvideSumUpTurnoverAgent, Customer.Ramseier</job-type>
			<durable>true</durable>
			<recover>false</recover>
		</job>
		<trigger>
			<cron>
				<name>ProvideSumUpTurnoverAgentTrigger</name>
				<group>Customer.Ramseier</group>
				<description>Runs periodically to sum up turnover per customer</description>
				<job-name>ProvideSumUpTurnoverAgent</job-name>
				<job-group>Customer.Ramseier</job-group>
				<cron-expression>0 0/10 * ? * *</cron-expression>
			</cron>
		</trigger>
	</schedule>
	<schedule>
		<job>
			<name>VisitReportSenderAgent</name>
			<group>Customer.Ramseier</group>
			<description>Sends pending visit reports</description>
			<job-type>Customer.Ramseier.BackgroundServices.VisitReportSenderAgent, Customer.Ramseier</job-type>
			<durable>true</durable>
			<recover>false</recover>
		</job>
		<trigger>
			<cron>
				<name>VisitReportSenderAgentTrigger</name>
				<group>Customer.Ramseier</group>
				<description>Runs every 5 minutes to send visit reports</description>
				<job-name>VisitReportSenderAgent</job-name>
				<job-group>Customer.Ramseier</job-group>
				<cron-expression>0 0/5 * * * ?</cron-expression>
			</cron>
		</trigger>
	</schedule>
</job-scheduling-data>